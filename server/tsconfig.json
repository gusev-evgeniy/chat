{
   "compilerOptions": {
     "target": "es6",
     "module": "commonjs",
     "moduleResolution": "node",
     "sourceMap": true,
     "esModuleInterop": true,
     "allowJs": false,
     "noImplicitAny": true,
     "strict": true,
     "noUnusedLocals": true,
     "noUnusedParameters": true,
     "skipLibCheck": true,
     "resolveJsonModule": true,
     "forceConsistentCasingInFileNames": true,
     "outDir": "build"
   },
   "lib": ["es2015"],
   "include": ["**/*.ts"],
   "exclude": ["node_modules", "build"]
 }